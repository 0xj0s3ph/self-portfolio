---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";

import { fullNameWithoutMiddle, fullName } from "../constants/name";
---

<BaseLayout
  title={`Hire Me | ${fullName}`}
  description="Full Stack Developer specializing in modern web applications with expertise in React, Node.js, and cloud technologies."
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="Hire Me"
        tagline="Let's build something amazing together. Bringing your vision to life with clean code and exceptional user experiences."
        align="start"
      />

      <section class="expertise">
        <h2>What I Bring to Your Project</h2>
        <div class="grid-container">
          <div class="expertise-card">
            <h3>Full Stack Development</h3>
            <p>
              End-to-end application development using modern technologies and
              best practices. From database design to responsive UI
              implementation.
            </p>
          </div>
          <div class="expertise-card">
            <h3>Problem Solving</h3>
            <p>
              Analytical approach to challenges with a focus on scalable,
              maintainable solutions that drive business value.
            </p>
          </div>
          <div class="expertise-card">
            <h3>Technical Leadership</h3>
            <p>
              Experience in leading development teams, setting technical
              direction, and mentoring junior developers.
            </p>
          </div>
        </div>
      </section>

      <section class="services">
        <h2>Services</h2>
        <div class="service-list">
          <div class="service-item">
            <h3>Modern Web Development</h3>
            <ul>
              <li>Next.js applications with SSR/SSG</li>
              <li>React-based Progressive Web Apps</li>
              <li>Full-stack React/Node.js solutions</li>
              <li>RESTful & GraphQL API integration</li>
            </ul>
          </div>
          <div class="service-item">
            <h3>Technical Consultation</h3>
            <ul>
              <li>Architecture planning</li>
              <li>Technology stack selection</li>
              <li>Performance optimization</li>
              <li>Security assessment</li>
            </ul>
          </div>
        </div>
      </section>

      <section class="tech-stack">
        <h2>Tech Stack</h2>
        <div class="process-steps">
          <div class="step">
            <h3>Frontend</h3>
            <p>React.js, Next.js, TypeScript, Tailwind CSS</p>
          </div>
          <div class="step">
            <h3>Backend</h3>
            <p>Node.js, Express, RESTful APIs, GraphQL</p>
          </div>
          <div class="step">
            <h3>Database</h3>
            <p>PostgreSQL, MongoDB, Redis, Firebase</p>
          </div>
          <div class="step">
            <h3>DevOps</h3>
            <p>Git, Docker, AWS, GCP</p>
          </div>
        </div>
      </section>
    </main>

    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .expertise-card {
    padding: 1.5rem;
    border-radius: 8px;
    background: var(--gray-999);
    border: 1px solid var(--gray-800);
  }

  .expertise-card h3 {
    color: var(--gray-200);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .service-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .service-item {
    padding: 1.5rem;
    background: var(--gray-999);
    border-radius: 8px;
    border: 1px solid var(--gray-800);
  }

  .service-item h3 {
    color: var(--gray-200);
    margin-bottom: 1rem;
  }

  .service-item ul {
    list-style: none;
    padding: 0;
  }

  .service-item li {
    margin: 0.5rem 0;
    color: var(--gray-300);
  }

  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .step {
    text-align: center;
    padding: 1.5rem;
    background: var(--gray-999);
    border-radius: 8px;
    border: 1px solid var(--gray-800);
  }

  .step h3 {
    color: var(--gray-200);
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2rem;
    color: var(--gray-100);
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .grid-container {
      grid-template-columns: 1fr;
    }

    .service-list {
      grid-template-columns: 1fr;
    }

    .process-steps {
      grid-template-columns: 1fr;
    }
  }
</style>
